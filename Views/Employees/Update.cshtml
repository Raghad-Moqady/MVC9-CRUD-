@model Employee
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>
    <h1 class=" text-center">Update</h1>
    <form asp-controller="Employees" asp-action="Update">
        <input type="hidden" value=@Model.Id />
        <div class="form-group mb-3 ">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"  value=@Model.Name>
        </div>
        <div class="form-group mb-3 ">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" value=@Model.Email>
        </div>
        <div class="form-group mb-3  ">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" value=@Model.Password>
        </div>
        <button type="submit" class="btn btn-success">Save Changes</button>
    </form>
    <a class="btn btn-success mt-3 " asp-controller="Employees" asp-action="GoBack">Go Back</a>
</body>
</html>

